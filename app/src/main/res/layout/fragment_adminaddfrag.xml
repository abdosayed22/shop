<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".adminaddfrag">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageid"
            android:layout_width="277dp"
            android:layout_height="124dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_gravity="center"
            android:layout_marginStart="59dp"
            android:layout_marginTop="53dp"
            android:src="@drawable/ic_add_a_photo_black_24dp" />


        <EditText
            android:id="@+id/name"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="233dp"
            android:hint="Enter Name"
            android:inputType="textEmailAddress"
            android:textColor="@color/colorRed"
            android:textSize="18sp" />


        <EditText
            android:id="@+id/catname"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="237dp"
            android:layout_marginTop="235dp"
            android:hint="Enter Catigory"
            android:inputType="textEmailAddress"
            android:textColor="@color/colorRed"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/price"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="393dp"
            android:hint="Enter Price"
            android:inputType="number"
            android:textColor="@color/colorRed"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/quantity"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="243dp"
            android:layout_marginTop="387dp"
            android:hint="Enter Quantity"
            android:inputType="number"
            android:textColor="@color/colorRed"
            android:textSize="18sp" />

        <Button
            android:id="@+id/AddItem"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="106dp"
            android:layout_marginTop="470dp"
            android:layout_marginEnd="105dp"
            android:background="@drawable/btnloginbg"
            android:text="Add PrODUCT"
            android:textColor="@color/colorWhite"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="163dp"
            android:layout_marginTop="22dp"
            android:text="Add Photo" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="292dp"
            android:layout_marginTop="362dp"
            android:text="Quantity" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="41dp"
            android:layout_marginTop="359dp"
            android:text="Price" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="249dp"
            android:layout_marginTop="216dp"
            android:text="Catigory Name" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="5dp"
            android:layout_marginTop="217dp"
            android:text="Product Name" />
    </RelativeLayout>
</ScrollView>