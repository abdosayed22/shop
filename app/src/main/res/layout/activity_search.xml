<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Search">

    <Button
        android:id="@+id/search_btn_activity_search_btn_id"
        android:layout_width="152dp"
        android:layout_height="41dp"
        android:layout_alignStart="@+id/search_voice_id"
        android:layout_alignParentTop="true"
        android:layout_marginStart="100dp"
        android:layout_marginTop="168dp"
        android:background="@drawable/btnloginbg"
        android:text="Search"
        android:textColor="@color/colorWhite" />

    <Button
        android:id="@+id/search_voice_id"
        android:layout_width="137dp"
        android:layout_height="41dp"


        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="9dp"
        android:layout_marginTop="19dp"
        android:background="@drawable/btnloginbg"
        android:text="Voice"
        android:textColor="@color/colorWhite" />

    <Button
        android:id="@+id/camera_search_id"
        android:layout_width="127dp"
        android:layout_height="wrap_content"

        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="17dp"
        android:layout_marginEnd="39dp"
        android:background="@drawable/btnloginbg"
        android:text="open camera"
        android:textColor="@color/colorWhite" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rr"
        android:layout_width="match_parent"
        android:layout_height="320dp"


        android:layout_alignParentBottom="true"
        android:layout_marginBottom="0dp" />

    <EditText
        android:id="@+id/search_text_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView11"
        android:layout_alignParentTop="true"
        android:layout_marginStart="70dp"
        android:layout_marginTop="74dp"
        android:ems="10"
        android:inputType="textEmailAddress" />

</RelativeLayout>