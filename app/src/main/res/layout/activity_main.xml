<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <ImageView
        android:layout_width="250dp"
        android:layout_height="wrap_content"

        android:layout_alignParentStart="true"

        android:layout_alignParentTop="true"
        android:layout_gravity="center"
        android:layout_marginStart="82dp"
        android:layout_marginTop="15dp"
        android:src="@drawable/shop_logo" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"

        android:layout_marginStart="0dp"
        android:layout_marginTop="229dp"
        android:paddingLeft="70dp"
        android:text="@string/intro_first_line"
        android:textColor="@color/colorDarkRed"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/d"
        android:layout_width="match_parent"

        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"


        android:layout_marginStart="0dp"
        android:layout_marginTop="280dp"
        android:paddingLeft="70dp"
        android:text="@string/intro_second_line"
        android:textColor="@color/colorRed"
        android:textSize="20sp" />

    <Button
        android:id="@+id/login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"


        android:layout_alignStart="@id/btnUserSignup"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="340dp"
        android:background="@drawable/btnloginbg"
        android:text="@string/btn_login"
        android:textColor="@color/colorWhite"
        android:textSize="20sp" />

    <Button
        android:id="@+id/adlogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"


        android:layout_alignStart="@id/btnUserSignup"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="399dp"
        android:background="@drawable/btnloginbg"
        android:text="Admin login here"
        android:textColor="@color/colorWhite"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btnUserSignup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="457dp"
        android:background="@drawable/btnsignupbg"
        android:text="@string/btn_user_signup"
        android:textColor="@color/colorWhite"
        android:textSize="20sp" />

    <Button
        android:id="@+id/search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="514dp"
        android:background="@drawable/btnsignupbg"
        android:text="Search in Products"
        android:textColor="@color/colorWhite"
        android:textSize="20sp" />

    <Button
        android:id="@+id/button2"
        android:layout_width="268dp"
        android:layout_height="0dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="143dp"
        android:layout_marginTop="582dp"
        android:text="Button" />

</RelativeLayout>